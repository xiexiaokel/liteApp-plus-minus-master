}
.img-invited{
  width:68rpx;
  height:55rpx;
  margin-right:10rpx;
}
.honor{
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-bottom:126rpx;
}
.adv-box{
  width:680rpx;
  height:200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin:0 auto;
  margin-bottom:10rpx;
}
.adv-img{
  width:680rpx;
  height:200rpx;
}
.tab-content{
  padding:25rpx 35rpx;
}
.prize-get{
  border:2rpx #b77bf2 solid;
  box-sizing: border-box;
   border-radius: 10rpx;
    background:#b77bf2;
}
.prize-top{
 height:130rpx;
 padding:0 25rpx;
}
.prize-btn{
  background: linear-gradient(to right, #f98c7d, #f92a82);
  width:196rpx;
  height:72rpx;
  border-radius: 336rpx;
  border:2rpx #fff solid;
  margin:0;
}
.prize-bot{
  line-height:60rpx;
}
.safe-icon{
  width:35rpx;
  height:40rpx;
}
.marquee-container{
  border-radius: 10rpx;
  overflow:hidden;
  margin-top:25rpx;
  height:300rpx;
}
.modal-text{
  display: flex;
  flex:1;
  position: absolute;
  left:0;
  bottom:0;
  right:0;
  top:0;
  padding:45rpx 25rpx;
  flex-flow: column nowrap;
}
.text-item{
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin:25rpx 0;
}
.text-icon{
  width:55rpx;
  height:61rpx;
  overflow:hidden;
  background-size: 100%;
  background-repeat: no-repeat;
  text-align: center;
  line-height: 61rpx;
  color:#fff;
  font-size:36rpx;
  margin-right:10rpx;
}
