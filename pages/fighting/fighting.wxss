/* pages/fighting/fighting.wxss */
.fight-container{
 background-color:#38353a; 
 height:100%;
 position: relative;
 z-index: 8;
}
.fight-container:before{
  display:block;
  content: '';
  width:100%;
  height:785rpx;
  position: absolute;
  background:#764cae;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  z-index: 9;
}
.fight-container:after{
  display:block;
  content: '';
  width:100%;
  height:770rpx;
  position: absolute;
  background: linear-gradient(to bottom, #4b2ec8, #ba7df3);
  z-index: 10;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.fight-content{
  position: absolute;
  z-index: 11;
  left:0;
  top:0;
  right:0;
  bottom:0;
  padding:35rpx;
}
.fight-title{
  font-size:36rpx;
  color:#ffe84c;
  margin:30rpx 0px;
}
.progress-box{
  height:48rpx;
  overflow:hidden;
  border-radius: 24rpx;
  border:2rpx #8f56cd solid;
  box-shadow: 0rpx 0rpx 5rpx 0rpx #633cc0;
  position: relative;
  z-index: 11;
}
.progress-mask{
  position: absolute;
  z-index: 12;
  height:100%;
  overflow:hidden;
  border-radius: 24rpx;
  /* background-image:url('../../images/progress-bar.png'); */
  background-image:url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1524052669&di=335c409422bf0e15bbc86e9f9aa88691&imgtype=jpg&er=1&src=http%3A%2F%2Ff10.topitme.com%2Fo%2F201101%2F29%2F12962453326647.jpg');
  background-repeat:  repeat-x;
  background-size:auto 100%;
}
.qa-content{
  height:630rpx; 
  position: relative;
}
.music-icon{
  position: absolute;
  right:0rpx;
  bottom:70rpx;
  width:63rpx;
  height:63rpx;
}
.ft48{
  margin-bottom:90rpx;
  margin-top:30rpx;
}
.ft150{
  font-size:150rpx;
  line-height: 150rpx;
}
.img-btn{
  width:334rpx;
  height:334rpx;
  margin:0 10rpx;
}